type User {
  id: ID!
  name: String!
  email: String!
  roles: [String!]!
  password: String!
}

input UserRequest {
  name: String!
  email: String!
  roles: [String!]!
  password: String!
}

type UserQuery {
  findAll: [User]
}

type UserMutation {
  register(request: UserRequest!): User!
  login(email: String!, password: String!): Object!
  addRole(userId: String, role: String!): User!
}
